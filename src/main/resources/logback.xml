<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(%5p) %clr(%logger{39} [%file:%line]){cyan} %clr(:){faint} %m%n%wex</pattern>
        </encoder>
    </appender>

    <logger name="org.ala.biocache" level="DEBUG"/>
    <logger name="au.org.ala.biocache" level="DEBUG"/>
    <logger name="au.org.ala" level="DEBUG"/>
    <logger name="org.scale7" level="ERROR"/>
    <logger name="au.org.ala.sds.model" level="ERROR"/>
    <logger name="au.org.ala.cas" level="ERROR"/>
    <logger name="org.jasig" level="ERROR"/>
    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.springframework.web" level="ERROR"/>
    <logger name="org.apache" level="ERROR"/>
    <logger name="httpclient" level="ERROR"/>
    <logger name="org.hibernate" level="ERROR"/>
    <logger name="net.sf" level="ERROR"/>
    <logger name="org.springframework.aop.interceptor.cache" level="ERROR"/>
    <logger name="org.springframework.jdbc.core" level="ERROR"/>
    <logger name="org.quartz" level="ERROR"/>
    <logger name="springfox" level="ERROR"/>
    <logger name="org.apache.tomcat.util.scan" level="ERROR"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
